# syntax=docker/dockerfile:1

# -----------------------------------------------------------------------------
# Stage 1: Builder (Dependency Compilation)
# -----------------------------------------------------------------------------
FROM public.ecr.aws/docker/library/python:3.12-slim AS builder

ENV DEBIAN_FRONTEND=noninteractive
WORKDIR /build

# Install build tools if needed (e.g., for pandas/numpy compilation)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
# Install to a local directory that we can copy over
RUN pip install --no-cache-dir --target=/install -r requirements.txt

# -----------------------------------------------------------------------------
# Stage 2: Runtime (Rootless & Minimal)
# -----------------------------------------------------------------------------
FROM public.ecr.aws/docker/library/python:3.12-slim

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app/libs \
    TZ=America/New_York

# Create a non-root user
RUN useradd -m -u 1000 -s /bin/bash appuser

# Install runtime system dependencies (tzdata)
RUN apt-get update && apt-get install -y --no-install-recommends \
    tzdata \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy installed python packages from builder
COPY --from=builder /install /app/libs

# Copy application code
COPY --chown=appuser:appuser storage.py .
COPY --chown=appuser:appuser tao_bounce_scanner.py .

USER appuser

ENTRYPOINT ["python", "tao_bounce_scanner.py"]
